<div class="container mt-5 mb-5">
  <div class="row">
    <h5 class="p-2 bg-light">ジャンル一覧・追加</h5>
    <div class="col-11">
      <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label "ジャンル名",class: 'm-2' %>
          <%= f.text_field :name, placeholder:"ジャンル名",class: 'form-control　col-3 m-2' %>
          <%= f.submit "新規登録", class: 'btn btn-success m-2' %>
        </div>
      <% end %>
      <table class="col-4">
        <tr class="bg-light">
          <th>ジャンル</th><th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>