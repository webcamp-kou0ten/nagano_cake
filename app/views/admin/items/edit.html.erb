<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h2>商品編集</h2>
      <%= form_with model: @item, url: {controller: 'items', action: 'update'}, local:true do |f| %>
      <table>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] } %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.number_field :price %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :sell_status, false %>
            <%= f.label :sell_status, "販売中", {value: false, style: "display: inline-block;"} %>
            <%= f.radio_button :sell_status, true %>
            <%= f.label :sell_status, "販売停止中", {value: true, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: 'btn btn-success m-2' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>