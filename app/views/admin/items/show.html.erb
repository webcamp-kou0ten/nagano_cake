<div class="container">
  <h2 class="mt-5">商品詳細</h2>
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, size: "250x250", fallback: "" %>
    </div>
    <div class="col-lg-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</br>(税抜価格)</td>
          <td><%= (@item.price * 1.1).round %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.sell_status %>
              <font color="gray">販売停止中</font>
            <% else %>
              <font color="green">販売中</font>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success m-2' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>