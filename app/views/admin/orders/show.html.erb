<div class="container" style="margin: 2% auto;">
  <h5 style="margin-bottom: 3%;"><strong style="background-color: #f5f5f5">注文履歴詳細</strong></h5>
  <table class="container" style="border: none;">
    <tbody>
      <tr>
        <td>購入者</td>
        <td><%= "#{@order.customer.last_name} #{@order.customer.first_name}" %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <%= form_with model: @order, url: {controller: 'orders', action: 'order_status'}, method: :patch, local:true do |f| %>
          <td><%= f.select :order_status, [["入金待ち", "0"], ["入金確認", "1"], ["製作中", "2"], ["発送準備中", "3"], ["発送済み", "4"]], selected: Order.order_statuses[:"#{@order.order_status}"] %>
          <%= f.submit '更新' %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
<div class="container" style="margin: 2% auto;">
  <div class="row">
    <table class="table col-md-8">
      <thead style="background-color: #f5f5f5">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          <% @items.zip(@order_items) do |items, order_items| %>
          <tr>
            <td class="col-md-3"><%= items.name %></td>
            <td class="col-md-2"><%= items.price %></td>
            <td class="col-md-1"><%= order_items.amount %></td>
            <td class="col-md-2"><%= (items.price * order_items.amount).round(0) %></td>
            <%= form_with model: order_items, url: {controller: 'orders', action: 'production_status'}, method: :patch, local:true do |f| %>
              <td class="col-md-3"><%= f.select :production_status, [["着手不可", 0], ["製作待ち", 1], ["製作中", 2], ["製作完了", 3]], selected: OrderItem.production_statuses[:"#{order_items.production_status}"] %></td>
              <%= f.hidden_field :id, :value => order_items.id %>
              <td class="col-md-1"><%= f.submit '更新' %></td>
            <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
    <div class="col-md-1"></div>
    <table class="table col-md-3">
      <tbody>
        <tr>
          <td class="customer-info"><small>商品合計</small></td>
          <td><%= @total.round(0) %></td>
        </tr>
        <tr>
          <td class="customer-info">送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class="customer-info"><small><small>請求金額合計</small></small></td>
          <td><%= (@total + @order.shipping_cost).round(0) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
