<div class="container mt-5 mb-5">
  <div class="row">
    <h5 class="p-2 bg-light"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員詳細" %></h5>
    <div class="col-11">
      <table class="col-8">
        <tr><th style="width: 30%">会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th style="width: 30%">氏名</th><td><%= "#{@customer.last_name}#{@customer.first_name}" %></td></tr>
        <tr><th style="width: 30%">フリガナ</th><td><%= "#{@customer.last_name_kana}#{@customer.first_name_kana}" %></td></tr>
        <tr><th style="width: 30%">郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th style="width: 30%">住所</th><td><%= @customer.address %></td></tr>
        <tr><th style="width: 30%">電話番号</th><td><%= @customer.phone_number %></td></tr>
        <tr><th style="width: 30%">メールアドレス</th><td><%= @customer.email %></td></tr>
        <tr>
          <th>会員ステータス</th>
            <% if @customer.customer_status %>
            <td class="text-danger">退会</td>
            <% else %>
            <td class="text-success">有効</td>
            <% end %>
        </tr>
      </table>
      <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success m-3" %>
      <%= link_to '注文履歴一覧を見る', admin_orders_path, class: "btn btn-sm btn-primary m-3" %>
    </div>
  </div>
</div>