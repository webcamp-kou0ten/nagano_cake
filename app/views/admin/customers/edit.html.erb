<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h5 class="p-2 bg-light"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員情報編集" %></h5>
      <%= form_with model: @customer, url: {controller: 'customers', action: 'update' }, local:true, method: :patch do |f| %>
        <table>
          <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
          <tr><th>住所</th><td><%= f.text_field :address,  size: 50 %></td></tr>
          <tr><th>電話番号</th><td><%= f.text_field :phone_number %></td></tr>
          <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :customer_status, :false %><%= f.label :customer_status, "有効", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :customer_status, :true %><%= f.label :customer_status, "退会", {value: :true, style: "display: inline-block;"} %>
            </td>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: 'btn btn-success m-2' %>
      <% end %>
    </div>
  </div>
</div>