<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h2>新規会員登録</h2>
      <table>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
       <tr>
         <td>名前</td>
         <td>(姓)</td>
         <td><%= f.text_field :last_name, autofocus: true %></td>
         <td>(名)</td>
         <td><%= f.text_field :first_name, autofocus: true %></td>
       </tr>
       <tr>
         <td>フリガナ</td>
         <td>(セイ)</td>
         <td><%= f.text_field :last_name_kana, autofocus: true %></td>
         <td>(メイ)</td>
         <td><%= f.text_field :first_name_kana, autofocus: true %></td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td></td>
         <td><%= f.email_field :email, autofocus: true %></td>
       </tr>
       <tr>
         <td>郵便番号(ハイフンなし)</td>
         <td></td>
         <td><%= f.text_field :postal_code, autofocus: true %></td>
       </tr>
       <tr>
         <td>住所</td>
         <td></td>
         <td><%= f.text_field :address, autofocus: true %></td>
       </tr>
       <tr>
         <td>電話番号(ハイフンなし)</td>
         <td></td>
         <td><%= f.text_field :phone_number, autofocus: true %></td>
       </tr>
       <tr>
         <td>パスワード(6文字以上)</td>
         <td></td>
         <td><%= f.password_field :encrypted_password, autocomplete: "new-password" %></td>
       </tr>
       <tr>
         <td>パスワード(確認用)</td>
         <td></td>
         <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
       </tr>
       <tr>
         <td></td>
         <td></td>
         <td><%= f.submit "新規登録" , class: "btn btn-success"%></td>
       </tr>
      <% end %>  
      </table>
      <p class="mt-5">既に登録済みの方</p>
      <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>