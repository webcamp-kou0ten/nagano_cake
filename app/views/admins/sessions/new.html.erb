<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h2>管理者ログイン</h2>
      <table>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true %></td>
        </tr>
        <tr>
          <td>パスワード</td>
          <td><%= f.password_field :pencrypted_assword %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>