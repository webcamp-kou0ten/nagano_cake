<div class="container mt-5 mb-5">
  <div class="row">
    <h5 class="p-2 bg-light">注文情報確認</h5>
    <div class="col-11">
      <table class="table border">
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, fallback: "" %><span><%= cart_item.item.name %></span>
              </td>
              <td><%= cart_item.item.price %></td>
              <td>
                <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch, local: true do |f| %>
                  <%= f.select :amount, (1..20), include_blank: "個数選択" %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>小計:<%= cart_item.item.price * cart_item.amount %></td>
              <td>
                <%= link_to "削除する", public_cart_item_path(cart_item), method: :delete, data: {confirm: '本当に削除しますか？'}, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>