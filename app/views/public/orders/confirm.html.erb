<div class="container mt-5 mb-5">
  <div class="row">
    <h5 class="p-2 bg-light">注文情報確認</h5>
    <div class="col-11 d-flex">
      <table border="2"  class="container table col-8 mr-1">
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <%= form_with model: @order, url:{controller: 'orders', action: 'create' }, method: :post, local: true do |f|%>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, fallback: "" %><span><%= cart_item.item.name %></span></td>
              <td><%= ( cart_item.item.price * 1.1 ).round(0) %></td>
              <td><%= cart_item.amount %></td>
              <td>小計:<%= ( cart_item.item.price * cart_item.amount * 1.1).round(0) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <table border="2" class="container table col-3">
        <tbody>
          <tr><td class="customer-info table-compact">送料</td><td><%= @order.shipping_cost %></td></tr>
          <tr><td class="customer-info table-compact">商品合計</td><td><%= @total.round(0) %></td></tr>
          <tr><td class="customer-info table-compact">請求金額</td><td><%= @total.round(0) + @order.shipping_cost %></td></tr>
        </tbody>
      </table>
    </div>
    <div>
      <div class="d-flex">
        <h6 class="font-weight-bold">お届け先</h6>
        <div><%= "〒#{@order.postal_code} #{@order.address}" %><br><%= @order.name %></div>
      </div>
      <div class="d-flex">
        <div class="font-weight-bold">支払方法</div>
        <div><%= @order.payment_method %></div>
      </div>
    </div>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :price, :value => @total + @order.shipping_cost %>
        <%= f.submit "注文を確定する", class: 'btn btn-success m-2' %>
        <% end %>
  </div>
</div>
