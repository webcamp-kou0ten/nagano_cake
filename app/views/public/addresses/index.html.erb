<div class="container" style="margin: 2% auto;">
  <h5 style="margin-bottom: 3%;"><strong style="background-color: #f5f5f5">配送先登録/一覧</strong></h5>
  <table border="2" class="table" style="width: 70%;">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td class="col-md-2"><%= address.postal_code %></td>
          <td class="col-md-4"><%= address.address %></td>
          <td class="col-md-2"><%= address.name %></td>
          <td style="display: flex; justify-content: space-around;">
            <%= link_to  edit_public_address_path(address.id), class: "btn btn-mod btn-border btn-medium btn-round faa-parent animated-hover mb-1" do %>
              <i class="fas fa-edit fa-fw faa-horizontal fa-2x"></i> Edit
            <% end %>
            <%= link_to public_address_path(address.id), method: :delete, class: "btn" do %>
            <i class="fas fa-minus-circle fa-2x"></i> Address Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container" style="margin: 2% auto;">
  <h5 style="margin: 5% auto;"><strong style="background-color: #f5f5f5">新規配送先登録</strong></h5>
  <%= form_with model: @address, url:public_addresses_path, local:true do |f| %>
    <div class="row address-info-form">
      <h6 class="col-md-4">郵便番号(ハイフンなし)</h6>
      <%= f.text_field :postal_code, class:"col-md-3" %>
    </div>
    <div class="row address-info-form">
      <h6 class="col-md-4">住所</h6>
      <%= f.text_field :address, class:"col-md-8" %>
    </div>
    <div class="row address-info-form">
      <h6 class="col-md-4">宛名</h6>
      <%= f.text_field :name, class:"col-md-3" %>
    </div>
    <div class="row address-info-form" style="margin-top: 50px;">
      <div class="col-md-8"></div>
      <%= button_tag :type => "submit", :class =>"btn btn-mod btn-border btn-medium btn-round faa-parent animated-hover mb-1" do %>
        <i class="fa fa-save fa-fw faa-horizontal fa-3x" aria-hidden="true"></i>Save
      <% end %>
    </div>
  <% end %>
</div>