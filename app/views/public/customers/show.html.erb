<div class="container" style="margin: 2% auto;">
  <h5 style="margin-bottom: 3%;"><strong style="background-color: #f5f5f5">マイページ</strong></h5>
  <div class="row">
    <div class="customer-info-links">
      <p class="links-name"><strong>登録情報</strong></p>
      <%= link_to '編集する', edit_public_customers_path, class: "btn btn-success" %>
    </div>
    <div class="customer-info-links">
      <p class="links-name"><strong>配送先</strong></p>
      <%= link_to '一覧を見る', public_addresses_path, class: "btn btn-primary" %>
    </div>
    <div class="customer-info-links">
      <p class="links-name"><strong>注文履歴</strong></p>
      <%= link_to '一覧を見る', public_orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="container">
  <table border="2" class="table" style="width: 70%;">
    <tbody>
      <tr>
        <td class="customer-info col-md-3">氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="customer-info col-md-3">カナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="customer-info col-md-3">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="customer-info col-md-3">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="customer-info col-md-3">電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td class="customer-info col-md-3">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
</div>