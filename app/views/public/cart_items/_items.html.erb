<tr>
  <td>
    <%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, fallback: "" %><span><%= cart_item.item.name %></span>
  </td>
  <td><%= cart_item.item.price %></td>
  <td id="amount">
    <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch, remote: true do |f| %>
      <%= f.select :amount, (1..20), include_blank: "個数選択" %>
      <%= f.submit "変更", class: "btn btn-success" %>
    <% end %>
  </td>
  <td>小計:<%= cart_item.item.price * cart_item.amount %></td>
  <td id="destroy_item">
    <%= link_to "削除する", public_cart_item_path(cart_item), method: :delete, data: {confirm: '本当に削除しますか？'}, class: "btn btn-danger", remote: true %>
  </td>
</tr>