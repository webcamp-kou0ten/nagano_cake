<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-3">
      <%= render 'genre', genres: @genres %>
    </div>
    <div class="col-9">
      <div class="main row">
        <div class="image col-4">
          <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "" %>
        </div>
        <div class="about col-8">
          <h1><%= @item.name %></h1>
          <p><%= @item.introduction %></p>
          <div class="price mt-5">¥<%= @item.price %></div>
          <div class="go_cart row mt-5">
            <%= form_with model: @cart_items, local:true do |item| %>
              <%= item.select :amount,(1..10), include_blank: "個数選択" %>個
              <%= item.submit 'カートに入れる', class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>