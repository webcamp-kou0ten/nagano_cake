<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'genre', genres: @genres %>
    </div>
    <div class="col-md-9">
      <div class="title-text row align-text-bottom">
        <h2>商品一覧<span class="small">(全<%= @items.count %>件)</span></h2>
      </div>
      <div class="row overflow-wrap mt-3 mb-5">
        <% @items.each do |item| %>
          <div class="col-md-3 mt-4">
            <%= link_to public_item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "sample.jpg", class: "img-fluid float1" %>
            <% end %>
            <div class="image-text">
              <p class="title"><%= link_to item.name, public_item_path(item), class: "text-dark" %></p>
              <p><strong>¥<%= item.add_tax.to_s(:delimited) %></strong></p>
            </div>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>