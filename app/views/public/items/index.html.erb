<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-3">
      <%= render 'homes/genre' %>
    </div>
    <div class="col-9">
      <div class="title-text row align-text-bottom">
        <h2>商品一覧<span class="small">(全×件)</span></h2>
      </div>
      <div class="row overflow-wrap mt-3 mb-5">
        <% @items.each do |item| %>
          <div class="col-3 mt-4">
            <% if customer_signed_in? %>
              <%= link_to public_item_path(item) do  %>
                <%= attachment_image_tag item, :image, :fill, 50, 50, fallback: "aa.jpg" %>
              <% end %>
            <% else %>
              <%= attachment_image_tag item, :image, :fill, 50, 50, fallback: "aa.jpg" %>
            <% end %>
            <div class="image-text">
              <p class="title"><%= item.name %></p>
              <p><strong>¥<%= item.price %></strong></p>
            </div>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>